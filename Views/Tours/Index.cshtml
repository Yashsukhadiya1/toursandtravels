@inject toursandtravels.Services.ICurrencyService Currency
@model IEnumerable<toursandtravels.Models.Tour>
@{
	ViewData["Title"] = "Tours";
}

<h2 class="mb-4">Popular Tours</h2>

<div class="row g-4">
	@foreach (var tour in Model)
	{
		<div class="col-md-4">
			<div class="card h-100">
					<img class="card-img-top" src="@(!string.IsNullOrWhiteSpace(tour.HeroImageUrl) ? tour.HeroImageUrl : "/images/placeholder.svg")" alt="@tour.Title" onerror="this.onerror=null;this.src='/images/placeholder.svg';" />
				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@tour.Title</h5>
					<p class="card-text text-muted">@tour.Summary</p>
					<div class="mt-auto d-flex justify-content-between align-items-center">
						<span class="fw-bold">@Currency.Format(tour.PricePerPerson, Currency.GetCurrency(Context))</span>
						<a class="btn btn-sm btn-primary" href="@Url.Action("Details", new { id = tour.Id })">View Details</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>


