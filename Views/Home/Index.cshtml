@{
	ViewData["Title"] = "Home";
}

<div class="p-5 mb-4 rounded-3 hero">
	<div class="container py-5">
		<h1 class="display-5 fw-bold">Book Flights, Hotels & Tours</h1>
		<p class="col-md-8 fs-5">Best prices with smooth booking experience.</p>
	</div>
</div>

<div class="container search-card p-4">
	<ul class="nav nav-pills tab-pill mb-3" id="searchTabs" role="tablist">
		<li class="nav-item" role="presentation">
			<button class="nav-link active" id="flights-tab" data-bs-toggle="pill" data-bs-target="#flights" type="button" role="tab">Flights</button>
		</li>
		<li class="nav-item" role="presentation">
			<button class="nav-link" id="hotels-tab" data-bs-toggle="pill" data-bs-target="#hotels" type="button" role="tab">Hotels</button>
		</li>
	</ul>
	<div class="tab-content">
		<div class="tab-pane fade show active" id="flights" role="tabpanel" aria-labelledby="flights-tab">
			<form method="get" action="@Url.Action("Results")" class="row g-3 align-items-end">
				<div class="col-md-3">
					<label class="form-label">From</label>
					<input name="from" class="form-control" placeholder="Delhi" required />
				</div>
				<div class="col-md-3">
					<label class="form-label">To</label>
					<input name="to" class="form-control" placeholder="Mumbai" required />
				</div>
				<div class="col-md-3">
					<label class="form-label">Departure</label>
					<input type="date" name="depart" class="form-control" required />
				</div>
				<div class="col-md-3 d-grid">
					<button class="btn btn-primary btn-lg"><i class="bi bi-search me-1"></i>Search</button>
				</div>
			</form>
		</div>
		<div class="tab-pane fade" id="hotels" role="tabpanel" aria-labelledby="hotels-tab">
			<form method="get" action="@Url.Action("Results")" class="row g-3 align-items-end">
				<div class="col-md-4">
					<label class="form-label">City</label>
					<input name="city" class="form-control" placeholder="Goa" required />
				</div>
				<div class="col-md-3">
					<label class="form-label">Check-in</label>
					<input type="date" name="checkin" class="form-control" required />
				</div>
				<div class="col-md-3">
					<label class="form-label">Check-out</label>
					<input type="date" name="checkout" class="form-control" required />
				</div>
				<div class="col-md-2 d-grid">
					<button class="btn btn-primary btn-lg"><i class="bi bi-search me-1"></i>Search</button>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="row g-4 mt-4">
	<div class="col-md-4">
		<div class="card h-100">
			<div class="card-body">
				<h5 class="card-title">Exclusive Deals</h5>
				<p class="card-text">Get the best prices on top routes and stays.</p>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="card h-100">
			<div class="card-body">
				<h5 class="card-title">24x7 Support</h5>
				<p class="card-text">Weâ€™re here to help at every step of your journey.</p>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="card h-100">
			<div class="card-body">
				<h5 class="card-title">Trusted by travelers</h5>
				<p class="card-text">Simple booking experience with secure payments.</p>
			</div>
		</div>
	</div>
</div>


